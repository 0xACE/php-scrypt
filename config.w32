ARG_ENABLE("scrypt", "whether to enable scrypt support", "no")
ARG_ENABLE("scrypt-debug", "whether to enable scrypt debug messages", "no")

if (PHP_SCRYPT != "no") {
    if (PHP_SCRYPT_DEBUG != "no") {
        AC_DEFINE('SCRYPT_DEBUG', 1, 'Include scrypt debug support');
    }

    AC_DEFINE('HAVE_SCRYPT', 1, 'Whether you have scrypt');
    EXTENSION("scrypt", "php_scrypt.c");
    ADD_SOURCES("php_scrypt_utils.c", "crypto/sha256.c", "crypto/crypto_scrypt.c");
}